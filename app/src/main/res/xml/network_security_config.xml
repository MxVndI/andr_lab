<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Разрешить HTTP трафик для всех доменов (для отладки) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Специфичные настройки для доменов YooMoney -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">yoomoney.ru</domain>
        <domain includeSubdomains="true">money.yandex.ru</domain>
        <domain includeSubdomains="true">yoomoney.com</domain>
    </domain-config>
</network-security-config>