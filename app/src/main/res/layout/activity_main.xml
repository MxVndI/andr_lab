<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1976D2"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/button_start"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:minWidth="80dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonNew"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/button_new"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:minWidth="80dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f5f5f5"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уровень сложности:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerDifficulty"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <Button
                android:id="@+id/buttonCheck"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:backgroundTint="#4CAF50"
                android:text="@string/button_check"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Сетка кроссворда"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#e0e0e0"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/crosswordView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/crossword_area"
                android:textSize="18sp"
                android:textColor="#757575"
                android:padding="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#f5f5f5">

                <Button
                    android:id="@+id/buttonHorizontalClues"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/horizontal_clues"
                    android:textSize="12sp"
                    android:backgroundTint="#e0e0e0"
                    android:textColor="#424242"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/buttonVerticalClues"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/vertical_clues"
                    android:textSize="12sp"
                    android:backgroundTint="#e0e0e0"
                    android:textColor="#424242"
                    android:layout_margin="2dp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/cluesContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выберите направление подсказок"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#424242" />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f5f5f5"
        android:padding="12dp">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/button_clear"
            android:textSize="14sp"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="6dp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/button_save"
            android:textSize="14sp"
            android:backgroundTint="#795548"
            android:textColor="@android:color/white"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="#424242"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"/>

</LinearLayout>